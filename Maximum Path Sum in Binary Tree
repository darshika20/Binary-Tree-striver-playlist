/**
* author: Darshika
* Question Link: https://leetcode.com/problems/binary-tree-maximum-path-sum/
* Time Complexity: O(n) - no of nodes
* Space Complexity: O(n) - recursive space
*/

/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {
    public int maxPathSum(TreeNode root) {
        int[] sum = new int[1];
        sum[0] = Integer.MIN_VALUE;
        findMaxSum(root, sum);
        return sum[0];
    }
    private int findMaxSum(TreeNode node, int[] sum) {
        if(node == null) {
            return 0;
        }
        int ls = findMaxSum(node.left, sum);
        int rs = findMaxSum(node.right, sum);
        sum[0] = Math.max(sum[0], node.val + Math.max(0,ls) + Math.max(0,rs));
        return node.val + Math.max(0, Math.max(ls, rs));
    }
}
