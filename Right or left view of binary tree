/**
* author: Darshika
* Question Link: https://leetcode.com/problems/binary-tree-right-side-view/
* Time Complexity: O(n)
* Space Complexity: O(h)
*/

/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {
    public List<Integer> rightSideView(TreeNode root) {
        List<Integer> result = new ArrayList<>();
        traverse(root, result, 0);
        return result;
    }
    
    private void traverse (TreeNode node, List<Integer> result, int level) {
        if (node == null) {
            return;
        }
        if(level == result.size()) {
            result.add(node.val);
        }
        traverse(node.right, result, level+1);
        traverse(node.left, result, level+1);
    }
}
